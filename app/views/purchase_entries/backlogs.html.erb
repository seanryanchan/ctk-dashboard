<p id="notice"><%= notice %></p>

<h1>Backlogged Purchase Entries</h1>

<table class="table">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Product ID / SKU</th>
      <th>Product qty</th>
      <th>PO Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_entries.each do |purchase_entry| %>
    <%# status of 2 means backlogged %>
      <% if purchase_entry.status == 2 %>
        <tr>
          <td><%= purchase_entry.brand %></td>
          <td><%= purchase_entry.product_id %></td>
          <td><%= purchase_entry.product_qty %></td>
          <td><%= purchase_entry.purchase_order_id %></td>
          <td><%= link_to 'Release', '#', class: "text-success" %></td>
          <td><%= link_to 'Edit', edit_purchase_entry_path(purchase_entry), class: "text-warning" %></td>
          <td><%= link_to 'Delete', purchase_entry, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
