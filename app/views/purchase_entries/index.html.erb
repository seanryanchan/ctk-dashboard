<p id="notice"><%= notice %></p>

<h1>Purchase Entries</h1>

<table class="table text-white table-dark table-striped">
  <thead>
    <tr>
      <th>SKU</th>
      <th>Product name</th>
      <th>Product qty</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_entries.each do |purchase_entry| %>
      <tr>
        <td><%= purchase_entry.product.id %></td>
        <td><%= purchase_entry.product.brand %></td>
        <td><%= purchase_entry.product_qty %></td>
        <td><%= purchase_entry.status %></td>
        <td><%= link_to 'Show', purchase_entry %></td>
        <td><%= link_to 'Edit', edit_purchase_entry_path(purchase_entry) %></td>
        <td><%= link_to 'Destroy', purchase_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

