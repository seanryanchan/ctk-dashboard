<p id="notice"><%= notice %></p>

<h1>Purchase Orders</h1>

<% @purchase_orders.each do |purchase_order| %>
<div class="container text-white">
  <h4>PO #<%= purchase_order.id %></h4>
  <h5>Status: <%= purchase_order.status %></h5>
  <p>Created at <%= purchase_order.created_at %></p>
  <table class="table">
    <thead>
      <tr>
        <th>Product name</th>
        <th>Product qty</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% purchase_order.purchase_entries.each do |purchase_entry| %>
        <tr>
          <td><%= purchase_entry.product_name %></td>
          <td><%= purchase_entry.product_qty %></td>
          <td><%= purchase_entry.status %></td>
          <td><%= link_to 'Show', purchase_entry %></td>
          <td><%= link_to 'Edit', edit_purchase_entry_path(purchase_entry) %></td>
          <td><%= link_to 'Destroy', purchase_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <button class="btn btn-primary">
    <%= link_to 'Show', purchase_order %>
  </button>
  <button class="btn btn-info">
    <%= link_to 'Edit', edit_purchase_order_path(purchase_order) %>
  </button>
  <button class="btn btn-danger">
    <%= link_to 'Destroy', purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %>
  </button>

</div>
<% end %>

<br>

