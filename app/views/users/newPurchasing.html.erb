<div class="card bg-secondary text-white container">
  <h2 class="card-title">Create Purchasing Account</h2>
  <div class="card-body">
    <%= form_for @user, url: create_purchasing_user_path, class: :form, method: :post do |form| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being created:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :username %>
      <%= form.text_field :username %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.text_field :password %>
    </div>
    <div class="field">
      <%= form.label :password_confirmation %>
      <%= form.text_field :password_confirmation %>
    </div>
    <div class="actions">
      <%= form.submit 'Create Purchasing Account', class: "btn btn-primary" %>
    </div>
    <% end %>
    <%= link_to 'Log in', root_path, class: 'btn btn-primary' %>
  </div>
</div>
